{
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://gaussian-explorer.com",
      "https://app-gaussian-explorer-web-eastus-dev-001.azurewebsites.net"
    ],
    "AllowAnyOrigin": false
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}
